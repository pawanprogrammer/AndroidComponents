<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckBoxActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Your Qualification:"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="20sp"
        android:padding="3dp"
        android:textColor="#000"
        android:gravity="center"
        android:fontFamily="serif"
        android:id="@+id/tv_qualification"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_qualification">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tenth"
            android:text="10th"
            android:textSize="16sp"
            android:checked="false"></CheckBox>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/twelth"
            android:text="12th"
            android:textSize="16sp"
            android:checked="false"></CheckBox>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/graduation"
            android:text="Graduation"
            android:textSize="16sp"
            android:checked="false"></CheckBox>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/postgraduation"
            android:text="Post Gradution"
            android:textSize="16sp"
            android:checked="false"></CheckBox>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>